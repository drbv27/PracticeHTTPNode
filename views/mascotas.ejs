<%- include("template/cabecera",{tituloweb:"Pagina de inicio"}) %>

  <div class="container">
    <h1>CRUD Mongo</h1>
    <a class="btn btn-success btn-block my-4" href="/mascotas/crear">
      Crear nueva mascota
    </a>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Acci√≥n</th>
        </tr>
      </thead>
      <tbody>
        <% if (arrayMascotas.length> 0) { %>
          <% arrayMascotas.forEach(mascota=> { %>
            <tr>
              <th scope="row">
                <%= mascota.id %>
              </th>
              <td>
                <%= mascota.nombre %>
              </td>
              <td>
                <%= mascota.descripcion %>
              </td>
              <td>@mdo</td>
            </tr>
            <% }) %>
              <% } %>
      </tbody>
    </table>

  </div>

  <%- include("template/footer") %>
